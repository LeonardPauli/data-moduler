{
  "name": "data-moduler",
  "version": "1.0.0",
  "description": "Automatic generation of database models, rest endpoints and graphql api (all with validations, ease of authentisation and fully customizable) from simple specification \"module\" files",
  "main": "src/index.js",
  "scripts": {
    "once": "babel-node to-classes/example/test0.js",
    "dev": "nodemon -q to-classes/example/test0.js --exec babel-node",
    "debug": "nodemon to-classes/example/test0.js --exec babel-node --inspect",
    "test": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "babel src -d dist/src & babel examples -d dist/examples",
    "serve": "forever dist/index.js",
    "lint:raw": "eslint --fix --ignore-pattern '!.eslintrc.js'",
    "lint": "eslint --fix --ignore-pattern '!.eslintrc.js' '{to-classes/**,.}/*.js'",
    "lint:nofix": "eslint --ignore-pattern '!.eslintrc.js' '{to-classes/**,.}/*.js'",
    "lint:watch": "onchange '{to-classes/**,.}/*.js' -d 200 -w -- yarn lint:raw {{changed}}",
    "flow": "flow",
    "flow:stop": "flow stop",
    "go": "yarn lint:watch & yarn test & subl data-moduler.sublime-project & yarn dev"
  },
  "author": "Leonard Pauli",
  "private": true,
  "engines": {
    "node": ">=6.11.0",
    "npm": ">=3.10.10",
    "yarn": ">=0.27.5"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^21.2.0",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react-native-stage-0": "^1.0.1",
    "cross-env": "^4.0.0",
    "eslint": "^4.6.1",
    "eslint-config-exponent": "^5.1.3",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.3.0",
    "flow-bin": "0.49.1",
    "jest": "^21.2.1",
    "onchange": "^3.2.1"
  },
  "jest": {
    "verbose": true
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "express": "^4.15.3",
    "express-graphql": "^0.6.6",
    "faker": "^4.1.0",
    "graphiql": "^0.11.2",
    "graphql": "^0.10.3",
    "jsonwebtoken": "^7.4.1",
    "lodash": "^4.17.4",
    "passport": "^0.3.2",
    "pg": "^6.4.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.2.1"
  }
}
